<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cao.stock.persistence.UnitMapper">

	<!-- cache / -->

	<select id="listAllUnits" resultType="Unit">
		SELECT
			UID,ID,NAME
		FROM 
			UNIT
	</select>

	<select id="queryUnitByUid" parameterType="integer" resultType="Unit">
		SELECT
			UID,ID,NAME
		FROM 
			UNIT
		WHERE 
			UID=#{uid}
  	</select>


	<insert id="addUnit" parameterType="Unit">
		INSERT INTO UNIT (id,name)
		VALUES (#{id}, #{name}) 
  	</insert>


	<delete id="deleteUnitByUid" parameterType="Unit">
		DELETE FROM
			UNIT
		WHERE 	
			UID=#{uid} 
  	</delete>


	<update id="modifyUnitByUid" parameterType="Unit">
		UPDATE 
			UNIT
		SET
			ID = #{id},
			NAME = #{name}
			WHERE UID=#{uid}
  	</update>

</mapper>